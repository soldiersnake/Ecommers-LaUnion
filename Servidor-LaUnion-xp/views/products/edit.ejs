<!DOCTYPE html>
<html lang="en">
  <!-- HEAD -->
  <%- include('../partials/headUsers.ejs') %>

  <body>
    <!-- HEADER -->
    <%- include('../partials/header.ejs') %>
    <link rel="stylesheet" href="/css/ABMproducts.css">

    <div class="main__container">
      <div class="Contenedor-formulario">
        <form class="main__form" action="/products/edit/<%= product.id %>?_method=PUT" enctype="multipart/form-data" method="post">
          <h2>Editar producto</h2>
          <h3 class="tituloProducto"><%= product.name %></h3>
          <div class="img-contenedor-editar">
            <h3 class="tituloProducto">Imagen</h3>
            <img id="producto-editar" src="/img/<%= product.imagen %> ">
          </div>
          <div class="inputFormulario">
            <input type="text" class="text-box" id="name" name="name" value="<%= product.name %>">
            <% if(locals.errors && locals.errors.name ){ %>
              <p class="text-danger"> * <%= errors.name.msg %>  </p>
            <% } %>
          </div>
          <div class="inputFormulario">
            <input type="text" class="text-box" id="price" name="price" value="<%= product.price %>">
            <% if(locals.errors && locals.errors.price ){ %>
              <p class="text-danger"> * <%= errors.price.msg %>  </p>
            <% } %>
          </div>
          <div>
            <textarea name="description" id="description" cols="30" rows="10"><%= product.description %></textarea>
            <% if(locals.errors && locals.errors.description ){ %>
              <p class="text-danger"> * <%= errors.description.msg %>  </p>
            <% } %>
          </div>
          <div class="filePhoto">
            <label class="labelImagen">Seleccione imagen de articulo</label>
            <input  type="file" name="imagen" id="imagen">
            <% if(locals.errors && locals.errors.imagen ){ %>
              <p class="text-danger"> * <%= errors.imagen.msg %>  </p>
            <% } %>
          </div>
          <div class="Category">
            <label class="tituloProducto" for="categoryId">Categor√≠a</label>
            <select name="categoryId">
              <option value="1">Libros</option>
              <option value="2">Juegos</option>
              <option value="3">figuras</option>
            </select>
          </div>
          <button class="editar-form-abm" type="submit">Editar</button>
        </form>
        <form action="/products/delete/<%= product.id %>?_method=delete" method="post" style="text-align: center;">
          <button class="eliminar-form-abm">Eliminar</button>
        </form>
      </div>
          
    
      <!-- FOOTER -->
      <%- include('../partials/footer.ejs') %>
    
    </body>
    
    </html>