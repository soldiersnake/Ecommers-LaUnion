<!DOCTYPE html>
<html lang="en">

<!-- HEAD -->
<%- include('../partials/headUsers.ejs') %>

<body>
    <header>
        <div class="icono">
            <a href="/">
                <img src="/img/logo.png">
            </a>
        </div>
        <a href='#' class="hamburger-button">
            <i class="fa-solid fa-bars"></i>
        </a>
        <nav class="menu">
            <ul type="none">
                <li><a href="#">Biblioteca</a></li>
                <li><a href="#">Juegos</a></li>
                <li><a href="#">Figuras</a></li>
                <li><a href="#">Bucar</a></li>
                <li><a href="/login">Login</a></li>
                <li><a href="/register">Sign-Up</a></li>
            </ul>
        </nav>
    </header>
    <section class="main">
        <div class="espacio-imagen">
            <img src="/img/fondo-reglog7.png">
        </div>
        <div class="espacio-formulario">
            <div class="formulario">
                <h2>Registro</h2>
                <form>
                    <div class="inputBx">
                        <label>Usuario</label>
                        <div class="inputIcon">
                            <input type="text" name="user" id="user" required>
                        </div>
                    </div>

                    <div class="inputBx">
                        <label>Nombre(s)</label>
                        <div class="inputIcon">
                            <input type="text" name="name" id="name" required>
                        </div>
                    </div>

                    <div class="inputBx">
                        <label>Apellido(s)</label>
                        <div class="inputIcon">
                            <input type="text" name="lastName" id="lastName" required>
                        </div>
                    </div>

                    <div class="inputBx">
                        <label>Correo electrónico</label>
                        <div class="inputIcon">
                            <input type="email" name="email" id="email" required>
                        </div>
                    </div>

                    <div class="inputBx">
                        <label>Contraseña</label>
                        <div class="inputIcon">
                            <input type="password" name="password1" id="password1" required>
                        </div>
                    </div>

                    <div class="inputBx">
                        <label>Confirmar contraseña</label>
                        <div class="inputIcon">
                            <input type="password" name="password2" id="password2">
                        </div>
                    </div>

                    <div class="inputBx">
                        <div class="inputIcon">
                            <label for="avatar" id="avatarL" class="main__form-upload">Imagen de perfil</label>
                        </div>
                        <input type="file" name="avatar" id="avatar">
                    </div>
                    <div class="inputBx">
                        <input type="submit" value="Crear cuenta">
                    </div>
                    <div class="inputBx">
                        <p>¿Ya tienes una cuenta? <a href="/login">Inicia sesión</a></p>
                </form>
            </div>
        </div>
        </form>
    </section>

    <!-- FOOTER -->
    <%- include('../partials/footer.ejs') %>
    
</body>

</html>